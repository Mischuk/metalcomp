.m_news
  position relative
  border-top 2px solid $base
  padding-top 15px
  @media MD
    padding-top 30px
  .item
    position relative
    .post-date
      padding 10px 0
      color #666666
      font-size 16px
    .title
      margin-bottom 20px
      a
        text-decoration underline
        color #000
        &:hover
          text-decoration none
    .image
      position relative
      height 160px
      a
        display block
        width 100%
        height 100%
        background-repeat no-repeat
        background-position 50%
        background-size cover
        &:hover
          &:after
            opacity .7
        &:after
          anim()
          content ''
          position absolute
          left 0
          top 0
          width 100%
          height 100%
          background #000
          opacity 0
        .category
          anim()
          position absolute
          left 0
          bottom 0
          width 100%
          background rgba(0,0,0,.5)
          color #c9c9c9
          padding 5px 10px
          z-index 1
          &:hover
            color #fff
