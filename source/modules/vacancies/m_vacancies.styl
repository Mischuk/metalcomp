.m_vacancies
  position relative
  .item
    & + .item
      margin-top 30px
      @media MD
        margin-top 45px
      @media LG
        margin-top 60px
    .title
      margin-bottom 15px
      a
        color #000
        font-size 24px
        border-bottom 1px solid rgba(0,0,0,.2)
        &:hover
          border-color transparent
    .cost
      bold()
      font-size 16px
      margin-bottom 15px
    .desc
      font-size 16px
      line-height 24px