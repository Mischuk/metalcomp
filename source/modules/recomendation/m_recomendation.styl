.m_recomendation
  img
    max-width 100%
  .column
    a
      display block
      width 100%
      &:hover
        .image
          border-color $base
        .title
          text-decoration none
      .image
        border 5px solid #141412
        @media XS
          height 330px
          line-height 320px
          overflow hidden
        @media MD
          height 350px
          line-height 340px
        img
          display block
          width 100%
          height 100%
          @media XS
            display inline-block
            vertical-align middle
            width auto
            height auto
      .title
        text-align center
        padding-top 10px
        font-size 16px
        color #000
        text-decoration underline
        margin-bottom 20px
.mfp-gallery
  button.mfp-close
    background: url('../images/sprite.png') no-repeat -60px 0;
    width: 18px;
    height: 17px;
    font-size 0
    text-indent -9999px
    right 10px
    top 50px
  .mfp-arrow
    width 36px
    height 68px
    margin-top -34px
    background-color transparent
    background-image url("../images/sprite.png")
    background-repeat no-repeat
    &:after,
    &:before
      display none
    &.mfp-arrow-left
      background-position -360px 0
      &:hover
        background-position -360px -120px
      @media MD
        left -60px
    &.mfp-arrow-right
      background-position -420px 0
      &:hover
        background-position -420px -120px
      @media MD
        right -60px
