.m_benefits
  position relative
  padding 10px 0
  .title
    pt()
    text-transform uppercase
    font-size 24px
    margin-bottom 15px
    @media XS
      font-size 30px
    @media MD
      margin-bottom 30px
    @media LG
      font-size 40px
  .list
    clearfix()
    .item
      position relative
      display table
      margin 20px 0
      &:first-child
        margin-top 0
      &:last-child
        margin-bottom 0
      @media XS
        float left
        width 50%
        margin-top 0
        margin-bottom 20px
      .icon
        position absolute
        left 0
        top 0
        width 90px
        height 100%
        img
          max-width 100%
          max-height 100%
          width auto !important
      .text
        bold()
        display table-cell
        vertical-align middle
        font-size 16px
        text-transform uppercase
        padding-left 80px
        padding-top 10px
        padding-bottom 10px
