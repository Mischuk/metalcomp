.m_header
  position fixed
  z-index 110
  height 80px
  line-height 80px
  width 100%
  left 0
  top 0
  color #fff
  background rgba(20, 20, 18, .6)
  @media MD
    line-height 1
    height 110px
  @media screen and (max-height: 420px)
    height 50px
    line-height 50px
    .logo
      line-height 50px !important
      a
        height 50px
        img
          max-height 35px !important
          margin-top -5px
  .menu
    display none
    padding 25px 0
    @media MD
      display block
      padding 20px 0 25px 0
    .row
      line-height 30px
      @media MD
        padding-left 325px
      @media LG
        padding-left 365px
    .sitemap
      float left
      a
        position relative
        display inline-block
        vertical-align middle
        color #fff
        font-size 16px
        padding-left 30px
        &:hover
          text-decoration underline
        &:after
          content ''
          position absolute
          left 0
          top 50%
          background: url('../images/sprite.png') no-repeat -240px -180px;
          width: 20px;
          height: 13px;
          margin-top -6px
        &.open
          &:after
            background: url('../images/sprite.png') no-repeat -60px 0;
            width: 18px;
            height: 17px;
            margin-top -8px
    .lang
      position relative
      float right
      font-size 14px
      &:hover
        background #35342f
        ul
          display block
        .current
          background rgba(255,255,255,.2)
      ul
        display none
        background #35342f
        position absolute
        top 25px
        left 0
        width 100%
        li + li
          border-top 1px solid rgba(255,255,255,.2)
        a
          anim()
          padding-left 15px
          color #c9c9c9
          display block
          &:hover
            color #fff
            background rgba(255,255,255,.2)
      .current
        position relative
        padding-left 15px
        padding-right 25px
        color #fff
        cursor pointer
        &:after
          content ''
          width: 0;
          height: 0;
          border-style: solid;
          border-width: 5px 3.5px 0 3.5px;
          border-color: #ad905d transparent transparent transparent;
          position absolute
          right 10px
          top 50%
          margin-top -2.5px
    .global-search
      float right
      width 45px
      height 25px
      text-align right
      border-left 1px solid rgba(255,255,255,.2)
      margin-left 25px
      a
        transition none
        display inline-block
        width 16px
        height 16px
        background url("../images/search.png") no-repeat 0 0
        &.open
          background: url('../images/sprite.png') no-repeat -60px 0;
          width: 18px;
          height: 17px;
          margin-top -1px
        &:hover
          opacity .75

    nav
      ul
        display table
        width 100%
        text-align center
        li
          display table-cell
          vertical-align bottom
          @media LG
            padding-left 10px
            padding-right 10px
            &:first-child
              padding-left 0
              text-align left
          a
            anim()
            display inline-block
            vertical-align bottom
            font-size 14px
            line-height 1.2
            color #fff
            border-bottom 1px solid rgba(255,255,255,.2)
            @media LG
              font-size 16px
            &:hover
              border-color #fff
  .logo
    position absolute
    left 0
    top 0
    height 100%
    line-height 80px
    width 75%
    padding 0 15px
    z-index 5
    @media MD
      line-height 110px
      width 301px
      padding 0
      left 15px
    a
      display block
      img
        display inline-block
        vertical-align middle
        max-height 100%
        max-width 100%
  .mobile-menu
    position absolute
    right 15px
    top 50%
    width 40px
    height 40px
    margin-top -20px
    @media MD
      display none
    .mobile-menu-trigger
      anim()
      sn()
      display block
      width 100%
      height 100%
      border 2px solid $base
      cursor pointer
      border-radius $radius
      @media MD
        display none
      &:after,
      &:before,
      span
        anim()
        content ''
        position absolute
        left 50%
        width 20px
        margin-left -10px
        height 2px
        background $base
      &:before
        top 10px
      &:after
        bottom 10px
      span
        top 50%
        margin-top -1.5px
      &.open
        background $base
        &:before,
        &:after
          background #fff
        span
          opacity 0
          transform translateX(-5px)
        &:after
          transform rotate(135deg) translate(-6px, 6px)
        &:before
          transform rotate(-135deg) translate(-7px, -6px)
  .modal-menu
    anim()
    position absolute
    left 0
    top 80px
    background #35342f
    width 100%
    transform translateX(-100%)
    z-index 110
    @media screen and (max-height: 420px)
      top 50px
    @media MD
      top 140px
      width 930px
      left 50%
      margin-left -465px
      transform translateX(-160%)
    &.open
      transform translateX(0%)
    .scrolled
      position relative
      padding 15px
      overflow auto
      height 100%
      @media MD
        padding 30px 30px
    .search
      position relative
      line-height 1
      @media XS
        padding-left 130px
      label
        display block
        color #fff
        font-size 36px
        margin-bottom 10px
        @media XS
          position absolute
          left 0
          top 0
          line-height 56px
          display inline-block
          vertical-align middle
      input
        height 60px
        border 2px solid $base
        width 100%
        background none
        font-family 'Segoe UI Semilight'
        font-size 24px
        padding-right 60px
        padding-left 15px
        color #fff
        &:focus
          background $base
          color #35342f
          & + button
            &:after
              background-position -180px 0
      button
        position absolute
        width 60px
        height 60px
        right 0
        bottom 0
        border none
        background none
        &:after
          content ''
          background: url('../images/sprite.png') no-repeat -120px 0;
          width: 32px;
          height: 31px;
          position absolute
          left 50%
          top 50%
          margin-left -(@width/2)
          margin-top -(@height/2)
    .all-navs
      padding-top 15px
      line-height 1
      .title
        text-transform uppercase
        font-size 20px
        border-bottom 1px solid $base
        padding 10px 0
        margin 15px 0
        @media MD
          height 60px
        &.full
          @media XS
            float left
            width 100%
          @media MD
            height auto
      ul
        a
          display inline-block
          vertical-align middle
          padding 5px 0
          font-size 14px
          text-decoration underline
          color #fff
          &:hover
            text-decoration none
          @media XS
            padding 10px 0
            line-height 1.2
      .column
        @media XS
          float left
          width 48%
          margin-left 4%
          &.col-3:nth-child(2n+1)
            clear left
            margin-left 0
          &.col-2:first-child
            margin-left 0
        @media SM
          &.col-3
            width 30.5%
            &:nth-child(2n+1)
              clear none
              margin-left 4%
            &:nth-child(3n+1)
              clear left
              margin-left 0
