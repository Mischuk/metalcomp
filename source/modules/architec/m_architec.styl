.m_architec
  .column
    position relative
    &:hover
      .image a:before
        opacity .7
      .title
        background $base
  .image
    height 200px
    width 100%
    @media XS
      height 300px
    @media MD
      height 400px
    @media LG
      height 400px
    a
      display block
      width 100%
      height 100%
      background-repeat no-repeat
      background-position 50%
      background-size cover
      position relative
      &:before
        anim()
        content ''
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background #000
        opacity 0
  .title
    anim()
    position absolute
    left 0
    bottom 0
    width 100%
    background #35342f
    font-size 16px
    line-height 1.2
    a
      display block
      padding 10px
      color #fff
      font-size 18px
      @media XS
        padding 15px
        font-size 24px
      @media MD
        padding 20px
