.m_s1
  color #fff
  h1
    pt()
    display inline-block
    vertical-align middle
    text-transform uppercase
    font-size 40px
    line-height 1
    padding-bottom 10px
    border-bottom 2px solid $base
    margin-bottom 20px
    padding-top 30px
    @media XS
      font-size 60px
    @media LG
      font-size 125px
    @media screen and (max-height: 460px)
      font-size 40px
    @media screen and (max-height: 459px), screen and (max-width: 767px)
      padding-top 60px
  .desc
    font-size 20px
    line-height 1.1
    padding-left 20px
    padding-right 20px
    padding-bottom 30px
    @media LG
      padding-left 0
      padding-right 0
      font-size 24px
      max-width 75%
  .slick-arrow
    background-color transparent
    font-size 0
    text-indent -9999px
    border none
    background-image url('../images/sprite.png')
    background-repeat no-repeat
    width: 36px;
    height: 68px;
    position absolute
    top 50%
    margin-top -(@height/2)
    z-index 2
    &.slick-prev
      left 50%
      margin-left -48%
      background-position -360px 0
      @media screen and (min-width: 1600px)
        margin-left -660px
      &:hover
        background-position -360px -120px
    &.slick-next
      right 50%
      margin-right -48%
      background-position -420px 0
      @media screen and (min-width: 1600px)
        margin-right -660px
      &:hover
        background-position -420px -120px
  .lc-slide
    padding 0 15px
    @media LG
      padding-left 90px
      padding-right 90px
      text-align left
  .lead-carousel-nav
    position absolute
    left 0
    bottom 10px
    width 100%
    text-align center
    li
      display inline-block
      vertical-align middle
      margin-left 5px
      margin-right 5px
      button
        anim()
        width 20px
        height 20px
        border 1px solid $base
        border-radius 50%
        font-size 0
        background none
      &.slick-active
        button
          background $base
  .lead-nav
    clearfix()
    margin-bottom 40px
    @media LG
      margin-top 40px
    .item
      float left
      width 50%
      margin 20px auto
      @media SM
        width 25%
      a
        display block
        &:hover
          .icon.i-1:after
            background-position 0 -360px
          .icon.i-2:after
            background-position -180px -360px
          .icon.i-3:after
            background-position -300px -360px
          .icon.i-4:after
            background-position -420px -360px
          .text
            span
              color $base
              border-color transparent
        .icon
          position relative
          height 90px
          &:after
            content ''
            background-image url("../images/sprite.png")
            background-repeat no-repeat
            position absolute
            left 50%
            top 50%
          &.i-1
            &:after
              background-position 0 -240px
              width 151px
              height 69px
              margin-left -(@width/2)
              margin-top -(@height/2)
            &:hover:after
              background-position 0 -360px
          &.i-2
            &:after
              background-position -180px -240px
              width 66px
              height 80px
              margin-left -(@width/2)
              margin-top -(@height/2)
            &:hover:after
              background-position -180px -360px
          &.i-3
            &:after
              background-position -300px -240px
              width 71px
              height 80px
              margin-left -(@width/2)
              margin-top -(@height/2)
            &:hover:after
              background-position -300px -360px
          &.i-4
            &:after
              background-position -420px -240px
              width 80px
              height 80px
              margin-left -(@width/2)
              margin-top -(@height/2)
            &:hover:after
              background-position -420px -360px
        .text
          line-height 1
          text-align center
          span
            color #fff
            display inline
            border-bottom 1px solid rgba(255,255,255,.2)