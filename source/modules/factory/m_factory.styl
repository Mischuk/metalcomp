.m_factory
  position relative
  .item
    height 320px
    @media LG
      height 400px
    & + .item
      margin-top 15px
      @media MD
        margin-top 30px
      @media LG
        margin-top 50px
    a
      display block
      width 100%
      height 100%
      position relative
      &:hover
        .image:after
          opacity .5
      .image
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background-repeat no-repeat
        background-size cover
        background-position 50%
        &:after
          anim()
          content ''
          position absolute
          left 0
          top 0
          width 100%
          height 100%
          background #000
          opacity 0
      .text
        position absolute
        left 0
        bottom 0
        padding 15px
        @media LG
          padding 30px
        .title
          pt()
          color #fff
          font-size 24px
          line-height 1
          border-bottom 2px solid $base
          padding-bottom 10px
          margin-bottom 10px
          @media LG
            font-size 40px
            padding-bottom 20px
            margin-bottom 20px
        .desc
          font-size 16px
          color #fff