.m_paginations
  position relative
  text-align center
  margin-top 30px
  margin-bottom 15px
  ul
    font-size 0
  li
    display inline-block
    vertical-align middle
    width 30px
    height 30px
    line-height 28px
    font-size 16px
    @media screen and (max-width: 420px)
      width 23px
      height 23px
      line-height 21px
      font-size 14px
    & + li
      margin-left -1px
    &:first-child a
      &:after
        transform rotate(180deg)
    &:first-child a,
    &:last-child a
      position relative
      &:after
        content ''
        background: url('../images/sprite.png') no-repeat -300px -89px;
        width: 16px;
        height: 8px;
        position absolute
        left 50%
        top 50%
        margin-left -(@width/2)
        margin-top -(@height/2)
      &:hover
        &:after
          background-position -324px -89px
    a
      anim()
      display block
      width 100%
      height 100%
      color $base
      border 1px solid $base
      &:hover,
      &.current
        background $base
        color #fff