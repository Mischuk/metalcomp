.m_products
  .image
    height 200px
    width 100%
    @media XS
      height 160px
    &:hover
      a:before
        opacity .7
    a
      display block
      width 100%
      height 100%
      background-repeat no-repeat
      background-position 50%
      background-size cover
      position relative
      &:before
        anim()
        content ''
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background #000
        opacity 0
  .title
    display inline-block
    vertical-align middle
    margin-bottom 5px
    margin-top 5px
    // height 60px
    // overflow hidden
    font-size 16px
    line-height 1.2
    @media LG
      margin-bottom 20px
    a
      color #000
      text-decoration underline
      &:hover
        text-decoration none